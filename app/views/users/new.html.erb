<% provide(:title, "Sign up") %>

<h1 class="has-text-centered">Sign Up</h1>
<div class="columns is-centered">
	<div class="column is-4">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>

			<div class="field">
				<%= f.label :name %>
				<div class="control">
					<%= f.text_field :name, class: "input" %>
				</div>
			</div>
			<div class="field">
				<%= f.label :email %>
				<div class="control">
					<%= f.email_field :email, class: "input" %>
				</div>
			</div>
			<div class="field">
				<%= f.label :password %>
				<div class="control">
					<%= f.password_field :password, class: "input" %>
				</div>
			</div>
			<div class="field">
				<%= f.label :password_confirmation, "Confirmation" %>
				<div class="control">
					<%= f.password_field :password_confirmation, class: "input" %>
				</div>
			</div>
			<div class="control">
				<%= f.submit "Create my account", class: "button is-primary" %>
			</div>
		<% end %>
	</div>
</div>